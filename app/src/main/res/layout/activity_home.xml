<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    tools:layout_editor_absoluteY="81dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@color/btn_color" />

        <TextView
            android:id="@+id/rate_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rating_button"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="138dp"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:text="Rate:"
            android:textSize="12pt" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rating_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_toEndOf="@+id/ratingBar"
            android:backgroundTint="@android:color/white"
            android:src="@drawable/ic_star_black_24dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:useCompatPadding="true" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="63dp"
            android:layout_marginStart="17dp"
            android:isIndicator="true"
            android:max="5"
            android:paddingTop="16dp"
            android:rating="0" />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="177dp"
            android:layout_height="78dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Welcome To Plant A Tree"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_Bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:itemIconTint="#6f9b41"
        app:itemTextColor="#6f9b41"
        app:menu="@menu/navigation"></android.support.design.widget.BottomNavigationView>

</RelativeLayout>